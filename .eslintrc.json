{
    "root":true,
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
        "prefer-const": "error",
        "no-var": "error",
        "eqeqeq": "error",
        "radix": "error",
        "react/display-name": "off"
    },
    "globals":{
        "_": "readonly",
        "process": "readonly"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
